{% extends "base.html" %}
{% block content %}
	<div class="col-sm-2 nav-sidbar">
	{% include "smashuplistleft.html" %}
	{% include "smashuplistright.html" %}
	</div>
	<div class="col-sm-9">
		<h1><a href="{{ url_for('character', name=left.char) }}">{{ left.char.title() }}</a></h1>
		<div class="pros">
			<h2>Pros:</h2>
			<ul>
			{% for pro in left.pros %}
				<li>{{ pro.text }}</li>
			{% endfor %}
			</ul>
		</div>
		<div class="cons">
			<h2>Cons:</h2>
			<ul>
			{% for con in left.cons %}
				<li>{{ con.text }}</li>
			{% endfor %}
			</ul>
		</div>
		<div class="neut">
			<h2>Neutral:</h2>
			<ul>
			{% for neut in left.neuts %}
				<li>{{ neut.text }}</li>
			{% endfor %}
			</ul>
		</div>
	</div>
	<div class="col-sm-9">
		<h1><a href="{{url_for('character', name=right.char) }}">{{ right.char.title() }}</a></h1>
		<div class="pros">
			<h2>Pros:</h2>
			<ul>
			{% for pro in right.pros %}
				<li>{{ pro.text }}</li>
			{% endfor %}
			</ul>
		</div>
		<div class="cons">
			<h2>Cons:</h2>
			<ul>
			{% for con in right.cons %}
				<li>{{ con.text }}</li>
			{% endfor %}
			</ul>
		</div>
		<div class="neut">
			<h2>Neutral:</h2>
			<ul>
			{% for neut in right.neuts %}
				<li>{{ neut.text }}</li>
			{% endfor %}
			</ul>
		</div>
	</div>
{% endblock %}
